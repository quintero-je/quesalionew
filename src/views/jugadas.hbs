<script>
    let players = document.getElementsByClassName('playersNum');
    for(let i =0; players.length; i++){
        let num = players[i].getAttribute('data-players-num');
        if(Number(num)>1){
            players[i].innerHTML= num+ ' Jugadores'
        }else{
            players[i].innerHTML= num+ ' Jugador'
        }
    }
</script>
